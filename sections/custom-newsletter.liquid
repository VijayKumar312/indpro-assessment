{{ 'custom-newsletter.css' |  asset_url |  stylesheet_tag }}
<script src="{{ 'custom-newsletter.js' |  asset_url }}" defer></script>

<section class="newsletter-section color-{{ section.settings.color_scheme }}">
    <div class="newsletter-container">
      <h2 class="newsletter-title">Stay Updated!</h2>
      <p class="newsletter-description">Sign up for our newsletter to get the latest news and updates.</p>
      <div id="custom-newsletter-form" class="custom-newsletter-form">
        <input 
          type="email" 
          id="custom-email" 
          class="newsletter-input" 
          placeholder="Enter your email address" 
          required 
        />
        <button class="newsletter-button">Subscribe</button>
      </div>
      <p id="response-message" class="response-message"></p>
    </div>
</section>

{%  schema  %}
    {
        "name": "Custom Newsletter",
        "settings": [
          {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "Color"
          }
        ],
        "blocks": [],
        "limit": 1,
        "presets": [
            {
                "name": "Custom Newsletter"
            }
        ]
    }
{% endschema %}